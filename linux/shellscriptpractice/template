!#bin/bash

echo -e "Enter the name of the file to be created:"
read -r filename
touch /home/gv/mnp/$filename.sh
echo -e " !#/bin/bash"> /home/gv/mnp/$filename.sh
echo -e " #purpose of the script:">> /home/gv/mnp/$filename.sh
echo -e " #version of the script/task:" >> /home/gv/mnp/$filename.sh
echo -e " #Date created" 'date' >> /home/gv/mnp/$filename.sh
echo -e " #Date modified:" >> /home/gv/mnp/$filename.sh
echo -e " #Author:" >> /home/gv/mnp/$filename.sh
echo -e " #Start" >> /home/gv/mnp/$filename.sh
echo -e " #Stop" >> /home/gv/mnp/$filename.sh

